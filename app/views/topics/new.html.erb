<h2>Create a new Topic</h2>
<%= form_for [@forum, @topic] do |f| %>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %><br />
	</div>
	<div class="field">
		<%= f.label :status %>This should be something like "Recruiting" or "Private".<br />
		<%= f.text_field :status %><br />
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %><br />
	</div>
	<div class="field">
		<%= f.submit %>
	</div>
<% end %>
<%= link_to "Cancel", :back %>